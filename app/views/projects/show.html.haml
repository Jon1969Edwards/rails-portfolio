%body
  .post_show_content.mt-32.skinny_wrapper.wrapper_padding.text-blue-light.h-48.lg:h-auto.lg:w-48.flex-none.bg-cover.rounded-t.lg:rounded-t-none.lg:rounded-l.text-center.overflow-hidden
    %header
      %p.date= @project.created_at.strftime('%A, %B %d')
      %h1= @project.title
      %hr/
    .content
      .markdown= @project.description

      .button_wrapper
        %a.project_button{href: "#{@project.link}", target: "_blank"}Visit #{@project.title}
      %hr/