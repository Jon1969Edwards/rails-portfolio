.flex.justify-center.text-red.bg-grey.shadow-md.rounded.px-8.pt-6.pb-8.mb-4.ml-32.mr-32
  = form_for @project do |f|
    = if @project.errors.any?
      %h2
        = pluralize(@project.errors.count, "error")
        prevented this project from saving:
      %ul
        = @project.errors.full_messages.each do |msg|
          %li= msg
    = f.label :title
    %br/
    = f.text_field :title
    %br/
    %br/
    = f.label :description
    %br/
    = f.text_area :description
    %br/
    %br/
    = f.label :link
    %br/
    = f.text_field :link
    %br/
    %br/
    = f.label :github_link
    %br/
    = f.text_field :link
    %br/
    %br/
    = f.submit